<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane fx:id="cardPane" xmlns="http://javafx.com/javafx/8.0.102" xmlns:fx="http://javafx.com/fxml/1">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" minWidth="30.0" prefWidth="30.0" />
    <ColumnConstraints hgrow="ALWAYS" minWidth="50.0" prefWidth="150.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints maxHeight="50.0" minHeight="10.0" vgrow="SOMETIMES" />
    <RowConstraints vgrow="SOMETIMES" />
      <RowConstraints vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <FlowPane fx:id="tagsFlowPane" hgap="10.0" GridPane.columnSpan="2" GridPane.rowIndex="2" />
      <Label fx:id="title" styleClass="label-title" text="&lt;title&gt;" wrapText="true" GridPane.columnIndex="1" />
      <Label fx:id="value" styleClass="label-value" text="&lt;value&gt;" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <Label fx:id="id" alignment="CENTER" styleClass="label-id" text="&lt;id&gt;" />
   </children>
</GridPane>
